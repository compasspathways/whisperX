{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "schedule:earlyMondays"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        ".*"
      ],
      "groupName": "non-major packages",
      "matchUpdateTypes": [
        "patch",
        "minor"
      ]
    }
  ]
}